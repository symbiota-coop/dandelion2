<% content_for :title, @event.name %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto">

      <div class="d-hotwire-native-none mt-4">
        <h1><%= @event.name %></h1>
      </div>

      <div class="card mt-4">
        <div class="card-body">
          <% if @event.start_time || @event.end_time %>
            <h5 class="card-title">📅 When</h5>
            <p class="card-text mb-3">
              <% if @event.start_time && @event.end_time %>
                <%= @event.start_time.strftime("%B %d, %Y at %I:%M %p") %> - 
                <%= @event.end_time.strftime("%I:%M %p") %>
              <% elsif @event.start_time %>
                <%= @event.start_time.strftime("%B %d, %Y at %I:%M %p") %>
              <% end %>
            </p>
          <% end %>

          <% if @event.location.present? %>
            <h5 class="card-title">📍 Where</h5>
            <p class="card-text mb-3"><%= @event.location %></p>
          <% end %>

          <% if @event.organisation.present? %>
            <h5 class="card-title">🏢 Organized by</h5>
            <p class="card-text mb-3">
              <%= link_to @event.organisation.name, organisation_path(@event.organisation), class: "text-decoration-none" %>
            </p>
          <% end %>

          <% if @event.description.present? %>
            <h5 class="card-title">📝 Description</h5>
            <div class="card-text">
              <%= simple_format(@event.description) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
